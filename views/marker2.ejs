<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>change marker</title>
        <style>
            html, body {
                height: 100%;
            }

            header {
                height: 20%;
                width: 100%;
                border: 1px solid orange;
                resize: both;
            }
            .header_container{
                line-height: 0.1em;
                list-style: none;
                border-top: 0;
                padding: 0;
            }

            .move_flex_container {
                display: flex;
                border: 5px;
                padding: 30px;
                padding-top: 15px;
                padding-bottom: 5px;
                height: 5px;
                justify-content: space-between;
            }
            .pageMove {
                text-decoration: none;
                color: #557cbf;
                font-weight: bold;
            }

            .dropbtn {
                border: none;
            }
            .dropdown {
                position: relative;
                display: inline-block;
            }
            .dropdown-content {
                display: none;
                position: absolute;
                text-align: center;
                background-color: #ffffff;
                width: 70px;
                box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
                z-index: 1;
            }
            .dropdown-content a {
                color: #000000;
                padding: 5px 10px;
                text-decoration: none;
                display: block;
            }
            .dropdown:hover .dropdown-content {
                display: block;
            }

            section {
                height: 70%;
                width: 100%;
                display: flex;
                border: 6px;
                padding: 5px;
                justify-content: center;
            }
            #line_add {
                background-color: #e6ffec;
            }
            #line_del {
                background-color: #ffebe9;
            }
            #inner_left {
                background-color: #f4f4f4;
                word-break:break-all;
            }
            #inner_right {
                background-color: #f4f4f4;
                word-break:break-all;
            }
            #left {
                background-color: #f4f4f4;
                flex: 0.49;
            }
            #right {
                background-color: #f4f4f4;
                flex: 0.49;
            }
            #middle {
                width: 10px;
            }
            #select_bar {
                list-style:none;
                height: 40px;
                padding: 5px 1px;
                margin: 0;
            }
            #select_bar select{
                float: right;
                position: relative;
                margin: 5px 30px;
                padding: 0;
            }
            select {
                width: 150px;
                height: 30px;
                font-family: inherit;
                border: 1px solid #999;
                border-radius: 0px;
                
            }
            footer {
                height: 100%;
                width: 100%;
            }
            #line_add {
                background-color: #e6ffec;
            }
            #line_del {
                background-color: #ffebe9;
            }
        </style>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.4.0/styles/intellij-light.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.13.1/languages/java.min.js"></script>
        <script>hljs.initHighlightingOnLoad();</script>
    </head>
    <body>
    <div class="page">
        <header>
            <ul class="header_container">
                <li id="select_bar">
                    <select name="jump" id="jump" onchange="location.href=this.value">
                        <% for (var i = 1; i <= 500; i++) { %>
                            <% if (currentFileName == mkFileName(i)) { %>
                                <option value="/marker?fileNum=<%= mkFileName(i) %>" selected><%= mkFileName(i) %></option>
                            <% } else { %> 
                            <option value="/marker?fileNum=<%= mkFileName(i) %>"><%= mkFileName(i) %></option>
                            <% } %> 
                        <% } %> 
                    </select>
                </li>
                <li>
                    <div class="move_flex_container">
                        <a class="pageMove" id="movePre" href="/marker?fileNum=<%= mkFileName(parseInt(currentFileName.slice(6)) - 1) %>">Previous</a>
                        <a class="pageMove" id="moveNext" href="/marker?fileNum=<%= mkFileName(parseInt(currentFileName.slice(6)) + 1) %>">Next</a>
                    </div>
                </li>
            </ul>
        </header>
        <section>
            <div id="left">
                <pre><code class="java" id="inner_left">
                    <%- lhsTemplate %>
                </code></pre>                    
            </div>
            <div id="middle">&nbsp</div>
            <div id="right">
                <pre><code class="java" id="inner_right">
                    <%- rhsTemplate %>
                </code></pre>                    
            </div>
        </section>

        <footer>
            <p>footer</p>
        </footer>
    </div>
    </body>
</html>